<Window x:Class="MousePointerChaser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MousePointerChaser"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MainWindow" Height="100" Width="100">
    <Grid>
        <TextBox Height="24" Margin="10,10,10,0" TextWrapping="Wrap" Text="{Binding PositionX}" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="10,39,10,0" TextWrapping="Wrap" Text="{Binding PositionY}" VerticalAlignment="Top"/>

    </Grid>
</Window>
